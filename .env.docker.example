# Docker Environment Configuration
# Copy this to .env.local and configure for your environment

# ==========================================
# Docker Configuration
# ==========================================
DOCKER_HOST=unix:///var/run/docker.sock
CHATBOT_PORT=3000
CHATBOT_HOST=0.0.0.0

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=production
VITE_APP_TITLE=React Chatbot with Gemini AI

# ==========================================
# API Configuration
# ==========================================
# Google Generative AI API Key (Already configured in Chatbot.tsx)
VITE_API_TIMEOUT=30000

# ==========================================
# Server Configuration
# ==========================================
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# Network Configuration
# ==========================================
# For accessing from other machines, set to your IP or 0.0.0.0
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==========================================
# Performance
# ==========================================
# CPU limit (in CPUs)
CPU_LIMIT=1

# Memory limit (in MB)
MEMORY_LIMIT=512
MEMORY_SWAP_LIMIT=1024

# ==========================================
# Nginx Configuration
# ==========================================
# Enable reverse proxy
NGINX_ENABLED=true
NGINX_PORT=80
NGINX_SSL_PORT=443

# SSL Configuration (for HTTPS)
# Uncomment and configure for production
# SSL_CERT=/etc/nginx/ssl/cert.pem
# SSL_KEY=/etc/nginx/ssl/key.pem

# ==========================================
# Container Restart Policy
# ==========================================
# Options: no, always, unless-stopped, on-failure
RESTART_POLICY=unless-stopped

# ==========================================
# Health Check
# ==========================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40

# ==========================================
# Volume Configuration
# ==========================================
# Local directory for persistent data
DATA_VOLUME=/data/chatbot

# ==========================================
# Development Only
# ==========================================
# Set to 'true' for development with hot reload
DEV_MODE=false
VITE_INLINE=true

# ==========================================
# Security
# ==========================================
# Disable insecure registries
INSECURE_REGISTRIES=false

# Run as specific user (for Linux)
RUN_AS_USER=1001
